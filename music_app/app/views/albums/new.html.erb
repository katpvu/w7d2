<h1>Create a new album!</h1>

<form action="<%= albums_url %>" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <!-- drop down for selecting band -->
    <label for="band">Select a Band:</label>
    <select name="album[band_id]" id="band">
        <% @bands.each do |band| %>
            <% if band.id = @current_band_id %>
                <option value="<%= band.id %>" selected><%= band.name %></option>
            <% else %>
                <option value="<%= band.id %>"><%= band.name %></option>
            <% end %>
        <% end %>
    </select>
    
    <br>

    <!-- radio buttons to select album is live or studio -->
    <label for="live_or_studio"></label>
    Live<input type="radio" name="album[live?]" id="live_or_studio" value="true" >
    Studio <input type="radio" name="album[live?]" id="live_or_studio" value="false">

    

</form>